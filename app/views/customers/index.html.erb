<div class="container">
<h1 class="text-success">Listing Customers</h1>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Gender</th>
    <th>Phone</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @customers.each do |customer| %>
  <tr class="success">
    <td><%= customer.name %></td>
    <td><%= customer.gender %></td>
    <td><%= customer.phone %></td>
    <td><%= customer.email %></td>
    <td><%= link_to 'Show', customer , :class=>"btn btn-primary"%></td>
    <td><%= link_to 'Edit', edit_customer_path(customer) , :class=>"btn btn-warning"%></td>
    <td><%= link_to 'Destroy', customer,:class=>"btn btn-danger", :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Customer', new_customer_path , :class=>"btn btn-success"%>
</div>