<div class="span3">
<legend class="text-success">Sign Up</legend>
	<div class="control-group">
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<div class="span3">
    <%= f.input :email, :required => true, :autofocus => true , :class=>"span3" %>
    <%= f.input :password, :required => true, :class=>"span3" %>
    <%= f.input :password_confirmation, :required => true , :class=>"span3"%>
    </div>
  </div>


  <div class="form-actions">
    <%= f.button :submit, "Sign up" , :class=>"btn btn-primary pull-right" %>
  </div>
<% end %>

<div class="span3">

<%= render "devise/shared/links" %>
</div>
	</div>
		</div>